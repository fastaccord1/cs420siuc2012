<?xml version="1.0" encoding="UTF-8"?>
<project name="buy_sell_420" default="all">
  
  
  <property file="buy_sell_420.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.sqljdbc4.classpath">
    <pathelement location="${basedir}/../../sqljdbc_2.0/enu/sqljdbc4.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module buy_sell_420 -->
  
  <dirname property="module.buy_sell_420.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.buy_sell_420" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.buy_sell_420" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.buy_sell_420" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.buy_sell_420" value="${compiler.args}"/>
  
  <property name="buy_sell_420.output.dir" value="${module.buy_sell_420.basedir}/out/production/buy_sell_420"/>
  <property name="buy_sell_420.testoutput.dir" value="${module.buy_sell_420.basedir}/out/test/buy_sell_420"/>
  
  <path id="buy_sell_420.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="buy_sell_420.module.production.classpath">
    <path refid="${module.jdk.classpath.buy_sell_420}"/>
    <path refid="library.sqljdbc4.classpath"/>
  </path>
  
  <path id="buy_sell_420.runtime.production.module.classpath">
    <pathelement location="${buy_sell_420.output.dir}"/>
    <path refid="library.sqljdbc4.classpath"/>
  </path>
  
  <path id="buy_sell_420.module.classpath">
    <path refid="${module.jdk.classpath.buy_sell_420}"/>
    <pathelement location="${buy_sell_420.output.dir}"/>
    <path refid="library.sqljdbc4.classpath"/>
  </path>
  
  <path id="buy_sell_420.runtime.module.classpath">
    <pathelement location="${buy_sell_420.testoutput.dir}"/>
    <pathelement location="${buy_sell_420.output.dir}"/>
    <path refid="library.sqljdbc4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.buy_sell_420">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.buy_sell_420">
    <patternset refid="excluded.from.module.buy_sell_420"/>
  </patternset>
  
  <path id="buy_sell_420.module.sourcepath">
    <dirset dir="${module.buy_sell_420.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.buy_sell_420" depends="compile.module.buy_sell_420.production,compile.module.buy_sell_420.tests" description="Compile module buy_sell_420"/>
  
  <target name="compile.module.buy_sell_420.production" depends="register.custom.compilers" description="Compile module buy_sell_420; production classes">
    <mkdir dir="${buy_sell_420.output.dir}"/>
    <javac2 destdir="${buy_sell_420.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.buy_sell_420}/javac">
      <compilerarg line="${compiler.args.buy_sell_420}"/>
      <bootclasspath refid="buy_sell_420.module.bootclasspath"/>
      <classpath refid="buy_sell_420.module.production.classpath"/>
      <src refid="buy_sell_420.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.buy_sell_420"/>
    </javac2>
    
    <copy todir="${buy_sell_420.output.dir}">
      <fileset dir="${module.buy_sell_420.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.buy_sell_420.tests" depends="register.custom.compilers,compile.module.buy_sell_420.production" description="compile module buy_sell_420; test classes" unless="skip.tests"/>
  
  <target name="clean.module.buy_sell_420" description="cleanup module">
    <delete dir="${buy_sell_420.output.dir}"/>
    <delete dir="${buy_sell_420.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.buy_sell_420" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.buy_sell_420" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>